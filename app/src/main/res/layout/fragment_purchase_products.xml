<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseProducts">

    <ImageButton
        android:id="@+id/purchaseBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:background="@null"/>

    <TextView
        android:id="@+id/purchaseProductTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/purchaseBackButton"
        style="@style/font"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:text="Purchase products"
        android:textColor="@color/ebellePurple"/>

    <ListView
        android:id="@+id/purchaseproductList"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_button_border"
        android:layout_below="@+id/purchaseProductTitle">
    </ListView>

    <Button
        android:id="@+id/purchaseProductsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purchaseproductList"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        style="@style/normalRoundButton"
        android:text="Purchase"/>

</RelativeLayout>