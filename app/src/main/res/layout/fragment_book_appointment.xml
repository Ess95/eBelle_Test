<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BookAppointmentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <com.example.ebellecustomcard.CustomWidget
                android:id="@+id/selectCategoryBookApptFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.ebellecustomcard.CustomWidget>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:id="@+id/bookApptServiceFragmentContainerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!--com.example.ebellecustomcard.CustomWidget
                android:id="@+id/chooseStylistWidget"
                android:layout_width="match_parent"
                android:layout_height="200dp"-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:id="@+id/stylistBookApptFragmentContainerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <com.example.ebellecustomcard.CustomWidget
                android:id="@+id/appointmentWidgetFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp">
            </com.example.ebellecustomcard.CustomWidget>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <Button
                    android:id="@+id/addButtonApptFrag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Book Appointment"
                    style="@style/normalRoundButton"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>