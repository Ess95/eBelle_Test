<resources>
    <!-- Base application theme. -->
    <style name="NoActionBar" parent="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay">appBarOverlay</style>

    <style name="normalRoundButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:textSize">17sp</item>
        <item name="android:text">ksh: 1000</item>
    </style>

    <style name="bigText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#660066</item>
        <item name="android:fontFamily">@font/helveticaneue_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="smallText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="title" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:text">Esther Kanyangonda</item>
    </style>

    <style name="content" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:textSize">17sp</item>
        <item name="android:text">fjhgdfhghdfgiuhhfdgskhfgsduygkfuysgd</item>
    </style>

    <style name="font_bold" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="font_light" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="small_progressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
        <item name="android:background">@drawable/circle_shape</item>
    </style>

    <style name="big_progressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
        <item name="android:background">@drawable/circle_shape</item>
    </style>

    <style name="normal_editText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#424242</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorAccent">@color/ebellePurple</item>
        <item name="colorControlNormal">@color/ebellePurple</item>
        <item name="colorControlActivated">@color/ebellePurple</item>
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
